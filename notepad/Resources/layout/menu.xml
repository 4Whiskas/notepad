
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#292619"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/above">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menuitemlist">
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/zakrivashka"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/above">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/above"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/listadd"
            android:text="Add list"
            android:textSize="22dp"
            android:background="@drawable/imagebuttonstyle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#fff8aa0f"
            android:textStyle="bold" />
        <Button
            android:visibility="invisible"
            android:id="@+id/deletelist"
            android:text="Delete list"
            android:background="@drawable/DeleteButtonStyle"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>